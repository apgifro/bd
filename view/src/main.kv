<Tab>
    MDScrollView:
        MDList:
            id: list

<MainScreen>:
    name: "main"
    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            id: toolbar
            title: "Evento"
            right_action_items: [["magnify"]]

        MDTabs:
            Tab:
                id: revisores
                title: "Revisores"

            Tab:
                id: artigos
                title: "Artigos"


    MDBoxLayout:
        padding: 35
        orientation: "vertical"

        MDFloatingActionButtonSpeedDial:
            data: root.data
            root_button_anim: True
            md_bg_color: app.theme_cls.primary_color
            pos_hint: {"right": 0.99}
