<CorrectorScreen>:
    name: "author"
    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            id: toolbar
            title: "Revisor"
            left_action_items: [["arrow-left", lambda result: root.manager.back()]]

        MDScrollView:
            orientation: "vertical"
            MDList:
                spacing: 30
                MDList:
                    padding: 50
                    MDTextField:
                        id: name
                        hint_text: "Nome"
                        icon_right: "pencil"
                        write_tab: False

                    MDTextField:
                        id: domain
                        hint_text: "Instituição"
                        icon_right: "domain"
                        write_tab: False

                    MDTextField:
                        id: street
                        hint_text: "Rua"
                        icon_right: "map-marker"
                        write_tab: False

                    MDTextField:
                        id: number
                        hint_text: "Número"
                        icon_right: "map-marker"
                        write_tab: False

                    MDTextField:
                        id: district
                        hint_text: "Bairro"
                        icon_right: "map-marker"
                        write_tab: False

                    MDTextField:
                        id: city
                        hint_text: "Cidade"
                        icon_right: "map-marker"
                        write_tab: False

                    MDTextField:
                        id: uf
                        hint_text: "UF com dois caracteres"
                        icon_right: "map-marker"
                        write_tab: False

                    MDTextField:
                        id: expertise
                        hint_text: "Especialidade"
                        icon_right: "certificate"
                        write_tab: False

                    MDTextField:
                        id: cellphone
                        hint_text: "Telefone com 9 dígitos e apenas números"
                        icon_right: "phone"
                        write_tab: False

                    MDTextField:
                        id: fax
                        hint_text: "Fax com 9 dígitos e apenas números"
                        icon_right: "phone"
                        write_tab: False

                MDBoxLayout:
                    orientation: "vertical"
                    MDBoxLayout:
                        orientation: "vertical"
                        MDRaisedButton:
                            text: "Salvar"
                            pos_hint: {"right": 0.97}
                            size_hint: 0.2, 0
                            on_release: root.save()

                    MDBoxLayout:
                        orientation: "vertical"
                        id: delete_box
